<!-- rounded_button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과를 위한 반투명 색상 배경 -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- 그림자 색상 (반투명 검정) -->
            <corners android:radius="16dp" /> <!-- 모서리 둥글기 -->
        </shape>
    </item>

    <!-- 버튼의 흰색 배경과 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- 버튼 배경색 -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- 테두리 색상과 두께 -->
            <corners android:radius="16dp" /> <!-- 모서리 둥글기 -->
        </shape>
    </item>
</layer-list>
