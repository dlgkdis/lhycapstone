<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="topnav_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <!-- Custom DatePickerDialog 스타일 -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- 다이얼로그 상단 배경 색상 설정 -->
        <item name="colorPrimary">#3D3D3D</item>
        <!-- 선택된 날짜의 동그라미 색상 설정 -->
        <item name="colorAccent">#3D3D3D</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
    </style>

    <!-- DatePicker 자체 스타일 -->
    <style name="CustomDatePicker" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#3D3D3D</item>
    </style>
</resources>