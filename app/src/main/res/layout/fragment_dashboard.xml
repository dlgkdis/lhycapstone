<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ScrollView로 전체 화면을 감싸기 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 월 텍스트와 화살표 버튼 -->

        <Button
            android:id="@+id/addScheduleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:text="+"
            android:backgroundTint="@color/gray"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/monthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OCTOBER"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nanumfont"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="88dp" />

        <Button
            android:id="@+id/prevMonthButton"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:text="&lt;"
            app:layout_constraintEnd_toStartOf="@id/monthText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="84dp" />

        <Button
            android:id="@+id/nextMonthButton"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:text="&gt;"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="84dp"
            app:layout_constraintStart_toEndOf="@+id/monthText"
            android:layout_marginStart="16dp" />

        <!-- 요일을 표시할 GridLayout -->
        <GridLayout
            android:id="@+id/weekDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            app:layout_constraintTop_toBottomOf="@id/monthText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:layout_marginTop="60dp">

            <!-- 요일 텍스트들 -->
            <TextView
                android:text="SUN"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#FF0000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold" />

            <TextView
                android:text="MON"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold"/>

            <TextView
                android:text="TUE"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold"/>

            <TextView
                android:text="WED"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold"/>

            <TextView
                android:text="THU"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold"/>

            <TextView
                android:text="FRI"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold"/>

            <TextView
                android:text="SAT"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#0048FF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:fontFamily="@font/nanumfont"
                android:textStyle="bold"/>

            <!-- 요일 텍스트들 -->
            <!-- 일, 월, 화, 수, 목, 금, 토 TextViews (코드 생략) -->

        </GridLayout>

        <!-- 일정 표시용 네모 박스 -->

        <FrameLayout
            android:id="@+id/calendarFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/weekDays"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.15">

            <ImageView
                android:layout_width="375dp"
                android:layout_height="275dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/calendar_line"
                android:scaleType="centerCrop"
                android:contentDescription="Calendar Background Image" />
            <!-- 날짜를 표시할 GridLayout -->
            <GridLayout
                android:id="@+id/calendarGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 날짜 텍스트가 동적으로 추가될 예정 -->

            </GridLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/scheduleBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/calendarFrame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>