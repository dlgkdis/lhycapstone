<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <!-- Room Decoration Image Views -->

        <!-- Navigation and Action Buttons -->

        <ImageView
            android:id="@+id/img_cushion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/myroom_cushion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="452dp"
            android:elevation="4dp"
            app:layout_constraintHorizontal_bias="0.344" />

        <ImageView
            android:id="@+id/img_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/myroom_table"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="368dp"
            android:elevation="4dp"
            app:layout_constraintHorizontal_bias="0.197" />

        <ImageView
            android:id="@+id/img_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bed_basic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="304dp"
            app:layout_constraintHorizontal_bias="0.561"
            android:elevation="4dp" />

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="474dp"
            app:srcCompat="@drawable/myroom_basic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btn_store"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:contentDescription="store"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/store"
            app:layout_constraintStart_toEndOf="@+id/btn_bell" />

        <ImageButton
            android:id="@+id/btn_takoyaki_store"
            android:layout_width="117dp"
            android:layout_height="93dp"
            android:backgroundTint="@color/white"
            android:contentDescription="타코야키(상점)"
            app:srcCompat="@drawable/taco_0"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="24dp" />

        <ImageButton
            android:id="@+id/btn_reward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:contentDescription="reward"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/reward" />

        <ImageButton
            android:id="@+id/btn_bell"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:contentDescription="bell"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bell" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:contentDescription="profile"
            app:layout_constraintHorizontal_bias="0.321"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person_main" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/coinTextView"
            app:layout_constraintBottom_toBottomOf="@+id/btn_takoyaki_store"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@+id/btn_takoyaki_store"
            android:layout_marginStart="93dp" />

        <ImageView
            android:id="@+id/img_shop1"
            android:layout_width="65dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/shop1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="420dp"
            app:layout_constraintHorizontal_bias="0.807"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
